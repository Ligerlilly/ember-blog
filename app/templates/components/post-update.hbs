{{#if updatePost}}
  <form>
    <div class="form-group">
      {{input value=title id='title' class='form-control' placeholder=post.title}}
    </div>
    <div class="form-group">
      {{input value=user id='user' class='form-control' placeholder=post.user}}
      {{input type='hidden' value=createdAt id='createdAt'}}
    </div>
    <div class="form-group">
      {{textarea value=body id='body' class='form-control' placeholder=post.body}}
    </div>
    <button {{action 'update' post}}>Save</button>
  </form>
{{else}}
 <a class="update-link" {{action 'updatePostForm'}}>Update Post</a>
{{/if}}
