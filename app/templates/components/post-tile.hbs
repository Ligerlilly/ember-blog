
<div class="col-md-12">
  <div class="title">

    {{#link-to 'post' post.id}}<h2>{{post.title}}</h2>{{/link-to}}
    <p>user: {{#link-to 'user' post.user.id}}{{full-name post.user}}{{/link-to}} created: {{moment-from-now post.createdAt}} {{post-update post=post update="update"}}</p>
  </div>
  <div class="body">
    {{post.body}}
  </div>
  <a {{action 'delete' post}}>delete</a>

</div>
